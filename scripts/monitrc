#!/bin/sh
hdmi_res="1920x1080"
lvds_res="1366x768"
hdmi_clause="--output HDMI1 --mode ${hdmi_res}"
lvds_clause="--output LVDS1 --mode ${lvds_res}"

if (( $# == 1 )); then
    case $1 in
        "hdmi-mirror" )
            eval "xrandr ${hdmi_clause} ${lvds_clause}"
            exit 0 ;;
        "hdmi-left" )
            eval "xrandr ${hdmi_clause} --left-of LVDS1 ${lvds_clause}"
            exit 0 ;;
        "hdmi-right" )
            eval "xrandr ${hdmi_clause} --right-of LVDS1 ${lvds_clause}" 
            exit 0 ;;
        "hdmi-off" )
            eval "xrandr --output HDMI1 --off ${lvds_clause}"
            exit 0 ;;
        "lvds" )
            eval "xrandr ${lvds_clause}"
            exit 0 ;;
        "lvds-res" )
            eval "xrandr --fb 1600x900 ${lvds_clause} --panning 1600x900 --scale 1.169x1.171"
            eval "xrandr --fb 1920x1080 ${lvds_clause} --panning 1920x1080 --scale 1.403x1.403"
            exit 0 ;;
        "lvds-resf" )
            eval "xrandr --fb 1920x1080 ${lvds_clause} --panning 1920x1080 --scale 1.403x1.406"
            exit 0 ;;
    esac
    exit 1
else
    exit 1
fi

